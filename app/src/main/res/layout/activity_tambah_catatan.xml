<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp">

    <androidx.cardview.widget.CardView
        android:layout_marginTop="20dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="340dp"
        android:layout_gravity="center"

        android:layout_height="50dp">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <Button
                android:id="@+id/addexp"
                android:layout_width="170dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:text="Pengeluaran"
                android:textColor="@color/cardview_light_background"
                />

            <Button
                android:id="@+id/addincome"
                android:layout_width="170dp"
                android:layout_height="match_parent"
                android:background="@color/cardview_light_background"
                android:text="Pemasukan" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="340dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <RelativeLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="JUDUL"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:id="@+id/txtjudul"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="14dp"
                />
            <EditText
                android:layout_toRightOf="@id/txtjudul"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:id="@+id/edtjudul"
                />
            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="JUMLAH"
                android:layout_below="@id/txtjudul"
                android:id="@+id/txtjumlah"
                android:textColor="@android:color/black"
                android:textAlignment="center"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="14dp" android:layout_marginBottom="10dp"
                />
            <EditText
                android:layout_toRightOf="@id/txtjumlah"
                android:layout_below="@id/edtjudul"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:id="@+id/edtjumlah"
                android:inputType="number"
                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="340dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <RelativeLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="KETERANGAN"
                android:id="@+id/txtnote"
                android:textColor="@android:color/black"
                android:textAlignment="center"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="14dp"
                />
            <EditText
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:inputType="text"
                android:id="@+id/edtnote"
                android:layout_toRightOf="@id/txtnote"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <Button

        android:id="@+id/btnsave"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimary"
        android:text="SIMPAN"
        android:textStyle="bold"
        android:textSize="18dp"/>

</LinearLayout>